@model IEnumerable<CRUD_WebApp.Models.ProductModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index Page</h1>

<p>
    <a asp-action="Create">Create New Product</a>
</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => product.TypeID)
                </td>
                <td>
                    @Html.DisplayFor(model => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => product.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => product.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => product.isVisible)
                </td>
                <td>
                    @Html.DisplayFor(model => product.isAvailable)
                </td>
                <td>
                    @Html.DisplayFor(model => product.Image)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ID">Edit</a>
                    <a asp-action="Details" asp-route-id="@product.ID">Details</a>
                    <a asp-action="Delete" asp-route-id="@product.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
